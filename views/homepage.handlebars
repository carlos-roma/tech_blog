<div class="container">
    {{#each posts}}
    <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <p>Posted by {{this.user.username}} on {{this.createdAt}}</p>
        {{#if ../logged_in}}
        <a href="/post/{{this.id}}">View Post</a>
        {{/if}}
    </div>
    {{/each}}
</div>
